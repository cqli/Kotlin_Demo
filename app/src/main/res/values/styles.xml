<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MarioTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 隐藏Activity窗口的ActionBar -->
        <item name="windowActionBar">false</item>
        <!-- 隐藏Activity窗口的Title标题栏 -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MarioTheme.Day" parent="MarioTheme">
        <!-- 日间模式下 "custom_attr_app_bg" 的赋值为#FFFFFF -->
        <item name="custom_attr_app_bg">@color/custom_color_app_bg_day</item>
        <item name="custom_attr_app_title_layout_bg">
            @color/custom_color_user_photo_place_holder_bg_day
        </item>
        <item name="custom_attr_user_photo_place_holder">
            @drawable/custom_drawable_day
        </item>

        <item name="colorPrimary">@color/custom_color_user_photo_place_holder_bg_day</item>
        <item name="colorPrimaryDark">@color/custom_color_user_photo_place_holder_bg_day</item>
        <item name="colorAccent">@color/custom_color_user_photo_place_holder_bg_day</item>
    </style>

    <style name="MarioTheme.Night" parent="MarioTheme">
        <!-- 夜间模式下 "custom_attr_app_bg" 的赋值为#1F1F1F -->
        <item name="custom_attr_app_bg">@color/custom_color_app_bg_night</item>
        <item name="custom_attr_app_title_layout_bg">
            @color/custom_color_user_photo_place_holder_bg_night
        </item>
        <item name="custom_attr_user_photo_place_holder">
            @drawable/custom_drawable_night
        </item>

        <item name="colorPrimary">@color/custom_color_user_photo_place_holder_bg_night</item>
        <item name="colorPrimaryDark">@color/custom_color_user_photo_place_holder_bg_night</item>
        <item name="colorAccent">@color/custom_color_user_photo_place_holder_bg_night</item>
    </style>


</resources>
